/* pages/play/play.wxss */
#countdown{width:100rpx;height:100rpx;border-radius:50%;background-color:lightblue;margin:auto;margin-left:20rpx;text-align:center;line-height:100rpx}
#submit{width:150rpx;height: 100rpx;float: right;margin:auto;margin-left:10rpx;margin-right:20rpx}
.photo{background-color:rgba(255,255,255,0.4);margin-top:10rpx;display:flex;flex-direction: row;flex-wrap:wrap;align-items:center;justify-content:center;width: 95%;border-radius: 15rpx}
.photo .img{width: 270rpx;height: 310rpx;margin:10rpx 30rpx;border-radius:20rpx;display: flex;background-size:cover !important;background-position:center center;background-repeat:no-repeat}
.photo .right{width: 150rpx;height: 150rpx;border-radius: 50%;display: flex;margin: auto;}

.userinfo-avatar{border-radius: 20%;width:150rpx;height: 150rpx;margin-left:20rpx;}
.modal{display:block;background-color:gray;opacity:0.6;width:100%;height:100%;left:0;top:0;position:fixed}
.modalImage{max-height:100%;max-width:100%;border-radius:21px;position:fixed;top:50%;left:50%;margin-left:-160px;margin-top:-170px;}
.topBar{display:flex;background-color:rgba(255,255,255,0.4);padding:15rpx 0;border-radius:20rpx;align-items:center;width: 95%}